%main.shops-show
  .l-container
    = render "shared/sidebar"
    .l-content
      .l-content__head
        .title
          ラーメン
        .sub-title
          .shop-jiro
            二郎　
          .shop-name
            = @shop.name
            店
      .l-content__shop
        .shop-content
          = @shop.address
        .shop-content
          = @shop.horiday
        .shop-content
          = @shop.opening_hours
        .shop-content
          = @shop.map
          -# googlemapAPIでは不要のカラムだったため、削除か店舗画像載せるか！？
        #map{:style => "width: 600px; height: 500px;"}
        :javascript
          handler = Gmaps.build('Google');
              handler.buildMap({ provider: { scrollwheel: false }, internal: {id: 'map'}}, function(){
                markers = handler.addMarkers([{
                  "lat": #{@shop.latitude},
                  "lng": #{@shop.longitude},
                  "infowindow": '<p>#{@shop.name}</p><p>#{@shop.address}</p><p>#{link_to "Googleマップで見る" ,"https://www.google.com/maps/search/?api=1&query=#{@shop.latitude}%2C#{@shop.longitude}".html_safe,target: "_blank"}</p>'
                }]);
                handler.bounds.extendWith(markers);
                handler.fitMapToBounds();
                handler.getMap().setZoom(17);
              });
        .shop-content
          = @shop.menu
        .shop-content
          = @shop.rule
        .shop-noodleimage
          = image_tag @shop.noodle_images.first.image.to_s
        .shop-content
          = @shop.detail
